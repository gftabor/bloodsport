<?xml version="1.0"?>
<sdf version="1.6">
  <world name="default">
    <plugin name="spinup" filename="libspinup_world.so">
      <spinner_rad_per_sec>130</spinner_rad_per_sec>
      <spinner_min_force_netwon>1000</spinner_min_force_netwon>
      <spinner_max_force_newton>50000</spinner_max_force_newton>
    </plugin>

    <include>
      <uri>model://ground_plane</uri>
    </include>

    <include>
      <uri>model://sun</uri>
    </include>

    <physics type="ode">
       <max_step_size>0.001</max_step_size>
	     <real_time_update_rate>-1</real_time_update_rate>
    </physics>

    <model name="robot">
      <include>
        <uri>model://bloodsport_chassis</uri>
      </include>
      <include>
        <!--<uri>model://bloodsport_standard_bar</uri>-->
        <!--<uri>model://bloodsport_asymetrical_bar</uri>-->
        <uri>model://bloodsport_standard_bar</uri>
      </include>
      <joint name="weapon_shaft_joint" type="revolute">
        <axis><xyz>0 1 0</xyz></axis>
        <parent>drive_base::drive_base_link</parent>
        <child>spinner::spinner_link</child>
      </joint>
    </model>

  </world>
</sdf>
